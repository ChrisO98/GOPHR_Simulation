<?xml version="1.0"?>

<launch>
  
  <!-- Run map server -->
  <arg name="map_file" default="$(find gophr)/maps/mymap.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>
  
  <!-- Run AMCL when there is an existing map-->
  <include file="$(find gophr)/launch/amcl.launch"/>
  
  <!-- Run Gazebo -->
  <include file="$(find gophr)/launch/robot_gazebo.launch"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <!-- observation sources located in costmap_common.yaml -->
    <rosparam file="$(find gophr)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find gophr)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find gophr)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find gophr)/params/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find gophr)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find gophr)/params/global_planner_params.yaml" command="load" />
    
  </node>

</launch>
